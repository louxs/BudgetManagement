<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="#fff1f1f1"
    android:padding="10.0dip"
    android:id="@+id/budgetFooter"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="12.0dip"
            android:textStyle="italic"
            android:gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/total_remaining_budget"
            android:layout_alignParentLeft="true" />
        <TextView android:textSize="14.0dip"
            android:textStyle="bold"
            android:gravity="right"
            android:id="@+id/budgetRestant"

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:layout_alignParentRight="true" />
    </LinearLayout>
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView android:textSize="14.0dip"
            android:gravity="right"
            android:id="@id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00/0.00"
            android:layout_alignParentRight="true" />
        <TextView android:textSize="12.0dip"
            android:textStyle="italic"
            android:gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/total_spend_budget"
            android:singleLine="true"
            android:layout_toLeftOf="@id/text4"
            android:layout_alignParentLeft="true" />
    </RelativeLayout>
</LinearLayout>